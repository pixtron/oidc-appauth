{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2019",
    "lib": ["es2019", "dom", "dom.iterable", "esnext.bigint", "es2020.string", "es2020.symbol.wellknown"],
    "outDir": "dist",
    "strict": true,
    "declaration": true,
    "downlevelIteration": true,
    "noEmitOnError": true,
    "inlineSourceMap": true,
    "inlineSources": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ]
}
